{% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
    <li class="dropdown">
        <a class="dropdown-toggle" href="#" data-toggle="dropdown" role="button" aria-expanded="false">{{ "register"|trans }} <span class="caret"></span></a>
        <div class="dropdown-menu" style="padding:17px;">
            <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_registration_register">
                {{ form_widget(form) }}
                <div>
                    <input type="submit" class="btn btn-success" value="{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}" />
                </div>
            </form>
        </div>
    </li>
{% endif %}
